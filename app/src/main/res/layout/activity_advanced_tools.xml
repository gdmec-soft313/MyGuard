<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom_android="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.AdvancedToolsActivity">
    <include layout="@layout/titlebar"/>
    <cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView
        android:id="@+id/advanceview_numbelongs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        custom_android:desc=""
        android:gravity="center_vertical"
        android:src="@drawable/numofbelongto"/>
    <cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        custom_android:desc="短信备份"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:src="@drawable/sms_backup"
        android:id="@+id/advanceview_smsbackup">
    </cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView>
    <cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        custom_android:desc="短信还原"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:src="@drawable/sms_reduction"
        android:id="@+id/advanceview_smsreduction">
    </cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView>
    <cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        custom_android:desc="程序猿 "
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:src="@drawable/programoflock"
        android:id="@+id/advanceview_applock">
    </cn.edu.gdmec.chaos07150844.myguard.m9advancedtools.widget.AdvancedToolsView>
</LinearLayout>
