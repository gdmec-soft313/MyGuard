<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.chaos07150844.myguard.m8trafficmonitor.OperatorSetActivity">
    <LinearLayout
        android:layout_weight="100"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/titlebar"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            style="@style/wrapcontent">
            <ImageView
                android:layout_width="60dp"
                android:background="@drawable/operator_set_info_incon"
                android:layout_height="60dp" />
            <TextView
                style="@style/textview16sp"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/_operatorset_string"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="运营商选择"
                style="@style/textview16sp" />
            <Spinner
                android:id="@+id/spinner_operator_select"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/operator_spinner_bg"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="40dp"></Spinner>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_operator_finish"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_weight="10"
        android:background="@drawable/operator_finish_bg_selector"
        android:layout_width="280dp"
        android:layout_height="45dp" />

</LinearLayout>
