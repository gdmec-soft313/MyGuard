<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itcast="cn.edu.gdmec.chaos07150844.myguard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <cn.edu.gdmec.chaos07150844.myguard.m10settings.widget.SettingView
        android:id="@+id/sv_blacknumber_set"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        itcast:status_on="黑名单拦截已开启"
        itcast:status_off="黑名单拦截已关闭"
        itcast:settitle="黑名单拦截设置"
        />

    <cn.edu.gdmec.chaos07150844.myguard.m10settings.widget.SettingView
        android:id="@+id/sv_applock_set"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        itcast:status_on="黑名单拦截已开启"
        itcast:status_off="黑名单拦截已关闭"
        itcast:settitle="程序锁设置"
        />

</LinearLayout>
